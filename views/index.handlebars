<div class="container">
    <div class="row">
        <img src="/assets/img/simpson.png" class="img-fluid col-6-md col-md-offset-3" alt="burger image">
        <div class="col-md-4 col-md-offset-4"><h1>Eat The Burger</h1></div>
    </div>
    <div class="row">
        <div class="col-md-6 uneaten">
            {{#each burgers}}
            	{{#unless this.devoured}}
                <p class="btn btn-danger">{{this.id}}. {{this.burger_name}}</p>
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit">Devour</button>
                </form>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-6 eaten">
            {{#each burgers}}
                {{#if this.devoured}}
                    <p>{{this.id}}. {{this.burger_name}}</p>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>